@{
    ViewData["Title"] = "View Employees";
    int counter = 1; //Initialize the counter.
    Pager pager = new Pager();
    int pageNumber = 0; //Default page number is 0.
    int copyCounter = counter;
    if(ViewBag.Pager != null)
    {
        pager = ViewBag.Pager;
        pageNumber = pager.CurrentPage;
    }
    //Track the page number
     

}

<partial name="~/Views/Shared/_Notification.cshtml" />

@model IEnumerable<EmployeeMgmtSystem.Models.Domain.EmployeeModel>

<div class="container">
    <div class="d-flex flex-column">
        <div class="col-md-10 mb-3">
            <div  style="background: #43aa8b;">
                <span class="d-flex justify-content-between p-2">
                    <a class="text-white mx-2 fw-bold" aria-current="page" asp-area="" asp-controller="Employee" asp-action="Employees" style="text-decoration:none;">Dashboard</a>
                    <a asp-area="" asp-controller="Employee" asp-action="AddEmployee" data-bs-toggle="tooltip" data-bs-placement="top"
                       data-bs-custom-class="custom-tooltip"
                       data-bs-title="Add Data">
                        <ion-icon name="person-add-outline" class="fs-4 text-white mx-3 pe-auto"></ion-icon>
                    </a>
                </span>
            </div>
        </div>
            <div class="col-md-10 d-flex flex-row justify-content-between">
                <div class="input-group mb-3">
                    <span id="errorSpan"></span>
                    <form class="d-flex flex-row" action="@Url.Action("Employees","Employee")">
                        <input type="text" name="searchQuery" id="searchQuery" class="form-control" placeholder="Search....">
                        <button onclick="preventReload()" class="outline-none" style="border:none;background:#43aa8b;border-top-right-radius:5px;color:white;">
                            <ion-icon name="search-outline" class="mx-1 fs-5 border-1 border-dark "></ion-icon>
                        </button>
                    </form>
                </div>
                 <div class="">
                     <form method="get" id="filterForm" >
                        <select id="selectSortType" name="sortType" class="form-select form-select-lg mb-3" aria-label="Sort">
                            <option value ="0">Filter &nbsp;&nbsp;&nbsp;</option>
                            <option value="1">Ascending</option>
                            <option value="2">Descending</option>
                        </select>
                     </form>
                </div>
               
            </div>
        <div class="col col-md-10">
            @if (Model != null)
            {

                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">Id</th>
                            <th scope="col">Name</th>
                            <th scope="col">Address</th>
                            <th scope="col">Salary</th>
                            <th scope="col">Phone</th>
                            <th scope="col">Position</th>
                            <th scope="col">Email</th>
                            <th scope="col">Department</th>
                            <th scope="col">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var data in Model)
                        {

                            <tr>
                                <th scope="row">@counter</th>
                                <td>@data.Name</td>
                                <td>@data.Address</td>
                                <td>@data.Salary</td>
                                <td>@data.Phone</td>
                                <td>@data.Position</td>
                                <td>@data.Email</td>
                                <td>@data.Department</td>
                                <td class="d-flex flex-row align-items-center">
                                    <a onclick="confirmDelete(@data.Id)" class="bg-danger text-center rounded text-center" 
                                        data-bs-toggle="tooltip" data-bs-placement="top"
                                        data-bs-custom-class="custom-tooltip"
                                        data-bs-title="Delete Data" style="cursor:pointer;">
                                        <ion-icon name="trash-outline" class="text-white fs-4 mx-1"></ion-icon>
                                    </a>
                                    <a href="/Employee/UpdateEmployee/@data.Id" class="bg-success mx-1 rounded text-center"
                                       data-bs-toggle="tooltip" data-bs-placement="top"
                                       data-bs-custom-class="custom-tooltip"
                                       data-bs-title="Edit Data"
                                    style="cursor:pointer;">
                                        <ion-icon name="create-outline" class="text-white fs-4 mx-1"></ion-icon>
                                    </a>
                                    <a href="/Employee/ViewEmployee/@data.Id" class="bg-primary mx-1 rounded text-center"
                                       data-bs-toggle="tooltip" data-bs-placement="top"
                                       data-bs-custom-class="custom-tooltip"
                                       data-bs-title="View Data">
                                        <ion-icon name="eye-outline" class="text-white fs-4 mx-1"></ion-icon>
                                    </a>
                                </td>
                            </tr>
                            counter++;
                        }

                    </tbody>
                </table>
                <partial name="~/Views/Shared/_Pagination.cshtml" model="@pager" />

            }
            else
            {
                <div class="alert alert-secondary" role="alert">
                    No Data Found !!
                </div>
            }
        </div>
    </div>
</div>


<script>
    var selectSortType = document.getElementById('selectSortType')
    var filterForm = document.getElementById('filterForm')
    selectSortType.addEventListener('change', function () {
        var selectedValue = selectSortType.value
        if (selectedValue !== '0' && selectedValue <3) {
            setTimeout(function () {
                var xhr = new XMLHttpRequest()
                xhr.open("GET","/Employee/Employees?sortId="+selectedValue,true)
                filterForm.submit()
            }, 3000);
        }
    })

    function confirmDelete( employeeId ){
        var confirmation = confirm("Are you sure you want to delete this data?")
        if (confirmation) {
            window.location.href = "/Employee/DeleteEmployee/?id=" + employeeId;
        }
    }

    function preventReload(){

        var searchQuery = document.getElementById('searchQuery').value
        var errorMessageSpan = document.getElementById('errorSpan')
        if (searchQuery === '') {
            errorMessageSpan.innerHTML = "<small style='color:red;font-size:10px;'>Empty query..</small>"
            event.preventDefault()
        }
       
    }
</script>