@{
    ViewData["Title"] = "View Employees";
    int counter = 1;
    Pager pager = new Pager();
    int pageNumber = 0;
    if(ViewBag.Pager != null)
    {
        pager = ViewBag.Pager;
        pageNumber = pager.CurrentPage;
    }

}

<partial name="~/Views/Shared/_Notification.cshtml" />

@model IEnumerable<EmployeeMgmtSystem.Models.Domain.EmployeeModel>
<div class="container">
    <div class="d-flex flex-column">
        <div class="col-md-10 mb-3">
            <div  style="background: #43aa8b;">
                <span class="d-flex justify-content-between p-2">
                    <span class="text-white mx-2 fw-bold">Employees Dashboard</span>
                    <a asp-area="" asp-controller="Employee" asp-action="AddEmployee" >
                        <ion-icon name="person-add-outline" class="fs-4 text-white mx-3 pe-auto"></ion-icon>
                    </a>
                </span>
            </div>
        </div>
        <div class="col col-md-10">
            @if (Model != null)
            {

                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">Id</th>
                            <th scope="col">Name</th>
                            <th scope="col">Address</th>
                            <th scope="col">Salary</th>
                            <th scope="col">Phone</th>
                            <th scope="col">Position</th>
                            <th scope="col">Email</th>
                            <th scope="col">Department</th>
                            <th scope="col">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var data in Model)
                        {

                            <tr>
                                <th scope="row">@counter</th>
                                <td>@data.Name</td>
                                <td>@data.Address</td>
                                <td>@data.Salary</td>
                                <td>@data.Phone</td>
                                <td>@data.Position</td>
                                <td>@data.Email</td>
                                <td>@data.Department</td>
                                <td class="d-flex flex-row align-items-center">
                                    <a onclick="confirmDelete(@data.Id)" class="bg-danger text-center rounded text-center" style="cursor:pointer;">
                                        <ion-icon name="trash-outline" class="text-white fs-4 mx-1"></ion-icon>
                                    </a>
                                    <a href="/Employee/UpdateEmployee/@data.Id" class="bg-success mx-1 rounded text-center" style="cursor:pointer;">
                                        <ion-icon name="create-outline" class="text-white fs-4 mx-1"></ion-icon>
                                    </a>
                                    <a href="/Employee/ViewEmployee/@data.Id" class="bg-primary mx-1 rounded text-center">
                                        <ion-icon name="eye-outline" class="text-white fs-4 mx-1"></ion-icon>
                                    </a>
                                </td>
                            </tr>
                            counter++;
                        }

                    </tbody>
                </table>
                <partial name="~/Views/Shared/_Pagination.cshtml" model="@pager" />

            }
            else
            {
                <div class="alert alert-secondary" role="alert">
                    No Data Found !!
                </div>
            }
        </div>
    </div>
</div>


<script>
    function confirmDelete( employeeId ){
        var confirmation = confirm("Are you sure you want to delete this data?")
        if (confirmation) {
            window.location.href = "/Employee/DeleteEmployee/?id=" + employeeId;
        } else {
            
        }
    }
</script>