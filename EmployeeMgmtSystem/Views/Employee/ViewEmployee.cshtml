@model EmployeeMgmtSystem.Models.Domain.EmployeeModel

<section class="vh-100" style="background-color: #9de2ff;">
    <div class="container py-5">
        <div class="row d-flex justify-content-center align-items-center">
            <div class="col col-md-9 col-lg-7 col-xl-5">
                <div class="card" style="border-radius: 15px;">
                    <div class="card-body p-4">
                        <div class="d-flex text-black">
                            <div class="flex-shrink-0">
                                <img src="~/image/download.png"
                                     alt="Generic placeholder image" class="img-fluid"
                                     style="width: 180px; border-radius: 10px;">
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <h5 class="mb-1">@Model.Name</h5>
                                <p class="mb-2 pb-1" style="color: #2b2a2a;">@Model.Position</p>
                                <div class="d-flex flex-column rounded-3 p-2 mb-2" style="background-color: #efefef;">
                                    <div>
                                        <p class="small text-muted mb-1">Salary</p>
                                        <p class="mb-0">@Model.Salary</p>
                                    </div>
                                    <div class="small">
                                        <p class="small text-muted mb-1">Email Address</p>
                                        <p class="mb-0">@Model.Email</p>
                                    </div>
                                    <div>
                                        <p class="small text-muted mb-1">Phone</p>
                                        <p class="mb-0">@Model.Phone</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>